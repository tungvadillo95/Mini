@{
    ViewData["Title"] = "Login";
}
<div class="row col-xl-12 mt-5" style="display:flex; justify-content:center;" id="dataLogin">
    <div style="width: 70%;">
        <h2 class="text-success">ĐĂNG NHẬP</h2>
        <hr style="border-top: 2px solid #99ffff;" />
        <form class="mt-4" id="formLogin">
            <input hidden id="ReturnUrl" value="@ViewBag.ReturnUrl" />
            <div class="form-group">
                <label for="loginEmail" class="font-weight-bold">Tên đăng nhập (Email)</label>
                <input type="text" class="form-control" placeholder="Nhập email" style="color: black;"
                       id="loginEmail" name="loginEmail"
                       onkeyup="account.checkEmail()"
                       data-rule-required="true"
                       data-msg-required="Email không được để trống">
                <label id="msgloginEmail" class="error"></label>
            </div>
            <div class="form-group">
                <label for="loginPassword" class="font-weight-bold">Mật khẩu</label>
                <input type="password" class="form-control" placeholder="Nhập mật khẩu"
                       id="loginPassword" name="loginPassword"
                       data-rule-required="true"
                       data-msg-required="Mật khẩu không được để trống">
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="rememberMe">
                <label class="form-check-label" for="RememberMe" style="font-style: italic;">Ghi nhớ tài khoản</label>
            </div>
            <a href="javascript:;" class="btn btn-primary mt-3" onclick="account.checkLogin()">Xác nhận</a>
            <p class="alert alert-danger text-break text-center mt-2" id="msgLoginResult"></p>
        </form>
    </div>
</div>
